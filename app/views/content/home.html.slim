section.home-intro
  .center
    .pull-left
      h1 Fund & Features
      p Turbi.me is a funding plataform for features projects.
      = link_to t('.home.start_your_project'), "projects_path", class: "btn"
    .pull-right
      div style="background:red;width:460px;height:40px;"
    .clear

section.box-list
  .center
    - @projects.each_with_index do |project,i|
      .show class="#{i % 3 == 1 ? "box centered" : "box"}"
        div
          = link_to "project_path project" do
            - a = percent project
            img src="" alt=""
            h2.project-title = project.name
            p.description
              = project.description
            // p.link
              // a.btn href="#" XXXX
            .progress-text
              span
                strong
                  = days_left project
                  |  Dias
                | RESTANTES
              span
                strong
                  = a
                  | %
                | ATINGIDO
            .progress.progress-success.progress-striped
              .bar style="width: #{a}%"
    .clear

section.steps
  .center
    #home_steps
      ul
        li.span3
          span.title.span1
            | 1
            hr.vertical.right
          span.span1 Passo 1
        li.span3
          span.title.span1
            hr.vertical.left 2
            hr.span1.vertical.right
          span.span1
            | Passo 2
        li.span3
          span.title.span1
            hr.vertical.left
            | 3
            hr.span1.vertical.right
          span.span1 Passo 3
      .clear