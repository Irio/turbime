section
  .center
    h1.page-title
      = @project.name
      - if user_signed_in? && @project.user == current_user
        = link_to t('.edit'), edit_project_path(@project)
    .clear
    .user-info.project
      .pull-left.photo
        iframe src="#{@project.vimeo.embed_url.html_safe}?title=0&amp;byline=0&amp;portrait=0&amp" width="640" height="430" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen
      .pull-left.about
        p
          span.big = "10"
          // @project.helpers ou algo parecido
          |  backers
        p
          span.big.block = number_to_currency(100, country: :en)
          span.block
          |  pledged of 
          = number_to_currency(100, country: :en)
          |  goal
        p
          span.big.block
            = days_left @project
          span.block
            = t('days_to_go')
        .donate-button
  				.hide-ended#pledge-wrap
  				  = link_to "#", class: "button roundsmall", id: "button-back-this-proj", title: "Back This Project" do
  				    | DONATE
  				    small 10 USD MINIMAL INVESTMENT
      .clear
    .share-social
      .fb-like data-href="#{request.url.html_safe}" data-send="false" data-layout="button_count" data-width="140" data-show-faces="false" style="vertical-align:top;min-width:100px"
      = link_to "Tweet", "https://twitter.com/share", class: "twitter-share-button", :"data-url" => "#{request.url.html_safe}", :"data-text" => "Texto que vai ser usado", :"data-via" => "turbime", :"data-lang" => "pt", :"data-count" => "horizontal"
      .g-plusone data-size="medium" data-href="#{request.url.html_safe}"
    .project-description
      = simple_format @project.description
    .comments
      .fb-comments data-href="#{request.url.html_safe}" data-num-posts="5" data-width="940"
