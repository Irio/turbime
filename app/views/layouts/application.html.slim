doctype html
html
  head
    /[ if lt IE 9 ]
      = javascript_include_tag "//html5shim.googlecode.com/svn/trunk/html5.js"
    meta[charset="utf-8"]
    meta[http-equiv="Content-Type" content="text/html;charset=utf-8"]
    title
      = content_for?(:title) ? "#{yield(:title)} Turbi.me" : "Turbi.me"
    = stylesheet_link_tag "application", "http://fonts.googleapis.com/css?family=Sansita+One|Kameron:400,700"
    meta[name="description" content=""]
    meta[name="keywords" content=""]
    meta[name="author" content=""]
    = yield(:meta_tags)
    = csrf_meta_tag
    = javascript_include_tag "application"
    = render "layouts/analytics"

  body data-controller-class=controller.class.name data-controller-name=controller.controller_name.camelize data-action=controller.action_name.camelize
    #fb-root
    javascript:
      (function(d, s, id) {
      	var js, fjs = d.getElementsByTagName(s)[0];
      	if (d.getElementById(id)) return;
      	js = d.createElement(s); js.id = id;
      	js.src = "//connect.facebook.net/pt_BR/all.js#xfbml=1&appId=359832334092122";
      	fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    header#header
      .center
        a#logo href="/"
          h1 Turbi.me
        .pull-right.menu
          nav.pull-left
            ul
              li
                = link_to root_path, id: "header-discover" do
                  | Discover
                  span great projects
              li
                = link_to new_project_path, id: "header-start" do
                  | Start
                  span your project
          .pull-right
            ul.share
              li
                a.facebook href="#" target="_blank"
                  span Facebook
              li
                a.twitter href="http://twitter.com/turbime" target="_blank"
                  span Twitter
              - if user_signed_in?
                li
                  = link_to t('profile'), edit_user_registration_path
                  = link_to t('sign_out'), destroy_user_session_path, method: :delete
              - else
                li
                  = link_to t('sign_up'), new_user_registration_path
                li
                  = link_to t('sign_in'), new_user_session_path
        .clear
      .clear

    section#content
      .center
        - unless flash[:error].nil?
          .error = flash[:error]
        - unless flash[:notice].nil?
          .notice = flash[:notice]
        - unless flash[:warning].nil?
          .warning = flash[:warning]
      = yield

    footer#footer
      .center
        .pull-left
          | Desenvolvido por 
          = link_to "Irio", "https://github.com/Irio", target: "_blank"
          | , 
          = link_to "Josemar", "https://github.com/josemarluedke", target: "_blank"
          | , 
          = link_to "Marcio", "https://github.com/marciomarques", target: "_blank"
          |  e 
          = link_to "SÃ©rgio", "https://github.com/ssjr", target: "_blank"
        .pull-right
          ul
            li
              a href="#" target="_blank" Facebook
            li
              a href="#" target="_blank" Twitter
          = link_to "http://startupideias.com.br/", id: "logo-footer", target: "_blank" do
            span STARTUPIDEIAS
          .clear
